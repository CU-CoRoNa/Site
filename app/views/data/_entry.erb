<% my_entries = EntryBuilder.get_entries %>
<% my_entries.each do |entry| %>
    <% info_entry = entry[:infoEntry] %>
    <div class="entry_container">

      <div class="t">
        <div class="Name" > <%= info_entry[:Name] %> </div>
        <div class="SubDomain" style="background-color: <%= info_entry[:SubDomain].color %>">
          <%= h(info_entry[:SubDomain].attr).gsub(/\n/, '<br/>')%>
        </div>
        <div class="Domain" style="background-color: <%= info_entry[:Domain].color %>">
          <%= info_entry[:Domain].attr %>
        </div>
      </div>

      <div class="row" data-equlizer>

        <div class="large-6 columns panel" id="left">
          <div class="Descriptions"> <%= info_entry[:Description] %> </div>
          <div class="Citation"> <%= info_entry[:Citation] %> </div>
        </div>

        <div class="large-6 columns panel" id="right">

          <div class="GraphInfo">

            <div class="row">
              <div class="Nodes"> <span class="label"> Nodes: <%= info_entry[:Nodes] %> </span> </div>
              <div class="NodeType"><span class="label"> Node Type: <%= info_entry[:NodeType] %> </span> </div>
            </div>

            <div class="row">
              <div class="Edges"> <span class="label"> Edges: <%= info_entry[:Edges] %> </span> </div>
              <div class="EdgeType"><span class="label"> Edge Type: <%= info_entry[:EdgeType] %> </span> </div>
            </div>

            <div class="row">
              <div class="GraphFormat"> <span class="label"> Format: <%= info_entry[:GraphFormat]%></span></div>
            </div>
            <div><% info_entry[:GraphProperties].split(",").each do |property| %>
              <span class="label"><%= property.strip %></span>
            <% end %></div>

          </div>

        </div>

      </div>

      <div class="fileInfo">
        <ul class="button-group">
          <% button = info_entry[:DataLink] %>
          <% if button %>
          <li>
            <a href="<%= button.link %>" class="tiny button <%= button.state%>" style="background-color:<%= button.color%>">
              <%= button.label %>
            </a>
          </li>
          <%end%>
          <li> <a href="<%= info_entry[:InfoLink] %>" class="tiny button"> More Info </a> </li>
          <div class="FileSize"> <span class="label"> File Size: <%= info_entry[:FileSize]%></span></div>
          <div class="FileType"> <span class="label">File Type: <%= info_entry[:FileType]%></span></div>
        </ul>
      </div>

      <% if !entry[:additionalEntries].nil? %>
        <div class="additionalGroup" id="<%= info_entry[:GroupId] %>">
        <% entry[:additionalEntries].each do |group_entry| %>
          <% entry_button = group_entry[:DataLink] %>
            <div class="row" id="additionalGroupEntry">
              <div class="Name" id="groupN"> <%= group_entry[:Name] %> </div>
              <ul class="button-group" id="groupButtons">
                <li>
                  <a href="<%= entry_button.link %>" class="tiny button <%= entry_button.state%>" >
                   Download
                  </a>
                </li>
                <li> <a href="<%= info_entry[:InfoLink] %>" class="tiny button"> More Info </a> </li>
              </ul>
            </div>
        <%end%>
        </div>
      <%end%>

    </div>
<%end%>
